{
  "name": "fintech-trading-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm dev:api\" \"pnpm dev:web\"",
    "dev:api": "pnpm --filter @trading/api dev",
    "dev:web": "pnpm --filter @trading/web dev",
    "build": "pnpm run build:shared && pnpm run --parallel build:api build:web",
    "build:shared": "pnpm --filter @trading/shared build",
    "build:api": "pnpm --filter @trading/api build",
    "build:web": "pnpm --filter @trading/web build",
    "test": "pnpm run --parallel test:api test:web",
    "test:api": "pnpm --filter @trading/api test",
    "test:web": "pnpm --filter @trading/web test",
    "lint": "pnpm run --parallel lint:api lint:web",
    "lint:api": "pnpm --filter @trading/api lint",
    "lint:web": "pnpm --filter @trading/web lint",
    "db:generate": "pnpm --filter @trading/api db:generate",
    "db:push": "pnpm --filter @trading/api db:push",
    "db:migrate": "pnpm --filter @trading/api db:migrate"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5"
  }
}
